<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.managerMapper">


	<!-- 관리자 가입하기 -->
	<insert id="register">
		INSERT INTO MEMBER (
			admin_id,
			admin_pw,
			admin_name,
			admin_nickName)
		VALUES (
			#{admin_id},
			#{admin_pw},
			#{admin_name},
			#{admin_nickName}
		)
	</insert>
	
	
	<!-- 모든 데이터 불러들임 -->
	<select id="listAll" resultType="co.kr.playbowling.vo.MemberVO">
	 <![CDATA[
	   SELECT
	    *
	   FROM
	   member
	   WHERE mem_num > 0 
	 order by mem_num desc
		 ]]>
	</select>

	<!-- 모든 데이터 불러들임 -->
	<select id="blistAll" resultType="co.kr.playbowling.vo.BoardVO">
	 <![CDATA[
	   SELECT
	    *
	   FROM
	   board
	   WHERE bnum > 0 
	 order by bnum desc
		 ]]>
	</select>
	
<!-- 
	 회원 탈퇴 
	<delete id="delete">
		DELETE FROM
		member
		WHERE
		mem_num = #{mem_num}
	</delete> -->
	
	<!-- 게시물 총 갯수 -->
	<select id="boardCountM" resultType="int">
		select count (bnum)
		from board
	</select>
	
		<!-- 게시물 총 갯수 -->
	<select id="memCount" resultType="int">
		select count (mem_num)
		from member
	</select>
	
	<!-- 게시물 목록 + 페이징 -->
	<select id="listPageM" parameterType="HashMap" resultType="co.kr.playbowling.vo.BoardVO">
		select
		bnum, btitle, bid, bdate, readcount
		from board
		order by bnum desc
		limit #{displayPost}, #{postNum} 
	</select>

</mapper>